<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StoreSmart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/home">StoreSmart</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/analytics/form">Analytics</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/analytics/form">ML</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br />
    <div class="container">
        <% if(data) { %>
            <h3> Total number of transactions to be analyzed: <%= data.size %> </h3>
        <% } %>
    </div>
    <br>
    <div class="container">
        <form action="/" method="post" align="center">
            <label for="opt" class="form-label">Choose Required analysis: </label>
            <select class="form-select" name="opt" id="opt">
                <option value="fin" selected>General Overview</option>
                <option value="fin">Financial Analysis</option>
                <option value="fin">Store-Wise Analysis</option>

            </select>
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="container">
        <h4>Viewing General Overview:</h4>
        <!-- <img src="/images/financials.png" alt="Unable to show img!"> -->
         <br />
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col">S No.</th>
                    <th scope="col">District</th>
                    <th scope="col">Total Revenue($)</th>
                    <th scope="col">Tax($)</th>
                    <th scope="col">Net Profit($)</th>
                    <th scope="col">Avg. Customer Rating</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                 <% data.forEach((obj,index) => { %>
                    <tr>
                        <th scope="row"> <%= index+1 %> </th>
                        <td> <%= obj.Suburb %> </td>
                        <td> <%= parseInt(obj.TotalAmountWithTax) %> </td>
                        <td> <%= parseInt(obj.Tax) %> </td>
                        <td> <%= parseInt(obj.NetProfit) %> </td>
                        <td> <%= obj.CustomerRating %> </td>
                    </tr>
               <% }); %>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>